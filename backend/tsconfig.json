{
  "moduleResolution": "node",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "..",
    "module": "commonjs",
    "sourceMap": false,
    "skipLibCheck": true,
    "plugins": [],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#db": ["server/db/index.ts"],
      "#server/*": ["server/*"],
      "#api/*": ["api/generated/*"],
      "#ServerAPI": ["api/server.ts"],
      "#data/*": ["server/data/*"]
    },
    "target": "es2022",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["es2022", "dom","dom.iterable"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./",
    "../api/"
  ],
  "exclude": [
    "dist",
    "node_modules/",
    "./server-dev.ts",
    "../api/generated/ClientAPI.ts",
    "../api/dummy.ts",
    "../api/dummy/"
  ]
}
